[user]
  name = Mario A Chavez
  email = mario.chavez@gmail.com
[github]
  user = mariochavez
[color]
  ui = auto
[alias]
  st = status
  di = diff
  ci = commit
  br = branch
  llog = log --date=local
  br = branch
  co = checkout
  hist = log --pretty=format:\"%Cgreen%h%Creset %Cblue%ad%Creset %s%C(yellow)%d%Creset %Cblue[%an]%Creset\" --graph --date=short
  serve = !git daemon --reuseaddr --verbose --base-path=. --export-all --enable=receive-pack ./.git
  showf = show --pretty="format:" --name-only
  st = status
  staged = diff --staged
[rerere]
  enabled = true
[core]
  editor = vim
